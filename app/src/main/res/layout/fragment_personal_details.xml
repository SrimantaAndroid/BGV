<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_pdetails"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:textSize="@dimen/_18sdp"
                android:text="Personal Deatils"></TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_compid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/tv_pdetails">
                <EditText
                    android:id="@+id/et_compid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="COMP ID"
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_stationcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_7sdp"
                >
                <EditText
                    android:id="@+id/et_stn_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="STATION CODE"
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associatefull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColorHint="@color/red"
                android:layout_marginTop="@dimen/_7sdp">
                <EditText
                    android:id="@+id/et_associatefull"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Associate Full Name *"

                    android:textColor="@color/black">
                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_assofathename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColorHint="@color/red"
                android:layout_marginRight="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_7sdp"
                >
                <EditText
                    android:id="@+id/et_assfather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Associate Father's Full Name *"
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tv_dateofbirth"
                android:layout_width="match_parent"
                android:hint=" Date-of-birth(dd-mmm-yyyy) * "
                android:textColorHint="@color/red"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:layout_height="@dimen/_45sdp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@color/black"
                ></TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associateroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_7sdp"
                >
                <EditText
                    android:id="@+id/et_roomdoor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Flat/Room/Door #"
                    android:textColor="@color/black">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associateflore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:layout_goneMarginTop="@dimen/_7sdp"
               >
                <EditText
                    android:id="@+id/et_associateflore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint=" Floor #"
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associateaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:textColorHint="@color/red"
               >
                <EditText
                    android:id="@+id/et_associateaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Building/House  Address *"
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associatestreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColorHint="@color/red"
                app:layout_goneMarginTop="@dimen/_7sdp"
               >
                <EditText
                    android:id="@+id/et_associatestreetname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint=" Street Name *"
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associateareaname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:textColorHint="@color/red"
               >
                <EditText
                    android:id="@+id/et_associatearaename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint=" Area name *"
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associateapin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_7sdp"
                android:textColorHint="@color/red"
               >
                <EditText
                    android:id="@+id/et_associatepin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:hint="Pin Code *"
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associatevill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:textColorHint="@color/red"
              >
                <EditText
                    android:id="@+id/et_associatevillage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint=" Distric/Village/Town/City *"
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associatsatte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_7sdp"
                android:textColorHint="@color/red"
               >
                <EditText
                    android:id="@+id/et_associatesate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint=" State *"
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associatelandmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColorHint="@color/red"
               >
                <EditText
                    android:id="@+id/et_associatelandmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint=" Landmark * "
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associatemobile1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
                android:textColorHint="@color/red"
                >
                <EditText
                    android:id="@+id/et_associatevmobile1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint=" Mobile Number 1 * "
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associatemobile2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:layout_goneMarginTop="@dimen/_7sdp"
                >
                <EditText
                    android:id="@+id/et_associatevmobile2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="Mobile Number 2"
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associatedlnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColorHint="@color/red"
                android:layout_marginTop="@dimen/_7sdp">
                <EditText
                    android:id="@+id/et_associatedlnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint=" DL Number * "
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_issuedyaer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select DL Issued Year *"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/red"></TextView>
                <Spinner
                    android:id="@+id/sp_dlyear"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"

                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:layout_marginTop="@dimen/_2sdp"></Spinner>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"

                        android:background="@color/black"
                        ></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_validyear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select DL valid upto *"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_11sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="@color/red"></TextView>
                <Spinner
                    android:id="@+id/sp_validuptoyear"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"

                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"></Spinner>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"

                        android:background="@color/black"
                        ></TextView>

                </LinearLayout>
            </LinearLayout>



            <TextView
                android:id="@+id/tvissuedstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Issued State from*"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:textColor="@color/red"></TextView>
            <Spinner
                android:id="@+id/sp_dlstate"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_7sdp"></Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@color/black"
                ></TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associatedpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
              >
                <EditText
                    android:id="@+id/et_associatedlpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="Permanent Account Number (PAN)"
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_associatevoterid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:textColorHint="@color/red"
                >
                <EditText
                    android:id="@+id/et_associatedvoterid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Voter ID*"
                    android:textColor="@color/black"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                >
                <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="@dimen/_102sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_20sdp"
                    android:text="ClEAR"
                    android:layout_centerInParent="true"></Button>
            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="@dimen/_102sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_20sdp"
                        android:text="Next"
                        android:layout_centerInParent="true"></Button>
                </RelativeLayout>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>